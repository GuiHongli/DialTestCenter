<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huawei.dialtest.center.mapper.TestCaseSetMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.huawei.dialtest.center.entity.TestCaseSet">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="version" property="version" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="TEXT"/>
        <result column="creator" property="creator" jdbcType="VARCHAR"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="updated_time" property="updatedTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, name, version, description, creator, created_time, updated_time
    </sql>

    <!-- 根据ID查找用例集 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM test_case_set
        WHERE id = #{id}
    </select>

    <!-- 根据名称和版本查找用例集 -->
    <select id="findByNameAndVersion" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM test_case_set
        WHERE name = #{name} AND version = #{version}
    </select>

    <!-- 根据名称查找用例集列表 -->
    <select id="findByNameOrderByCreatedTimeDesc" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM test_case_set
        WHERE name = #{name}
        ORDER BY created_time DESC
    </select>

    <!-- 根据创建人查找用例集列表 -->
    <select id="findByCreatorOrderByCreatedTimeDesc" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM test_case_set
        WHERE creator = #{creator}
        ORDER BY created_time DESC
    </select>

    <!-- 分页查询用例集列表 -->
    <select id="findAllByOrderByCreatedTimeDesc" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM test_case_set
        ORDER BY created_time DESC
        LIMIT #{pageSize} OFFSET #{pageNo}
    </select>

    <!-- 检查名称和版本是否存在 -->
    <select id="existsByNameAndVersion" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM test_case_set
        WHERE name = #{name} AND version = #{version}
    </select>

    <!-- 统计用例集总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM test_case_set
    </select>

    <!-- 插入用例集 -->
    <insert id="insert" parameterType="com.huawei.dialtest.center.entity.TestCaseSet" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO test_case_set (
            name,
            version,
            description,
            creator,
            created_time,
            updated_time
        ) VALUES (
            #{name},
            #{version},
            #{description},
            #{creator},
            #{createdTime},
            #{updatedTime}
        )
    </insert>

    <!-- 更新用例集 -->
    <update id="update" parameterType="com.huawei.dialtest.center.entity.TestCaseSet">
        UPDATE test_case_set
        SET name = #{name},
            version = #{version},
            description = #{description},
            creator = #{creator},
            updated_time = #{updatedTime}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除用例集 -->
    <delete id="deleteById">
        DELETE FROM test_case_set WHERE id = #{id}
    </delete>

</mapper>
