<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huawei.dialtest.center.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.huawei.dialtest.center.entity.DialUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, username, password, last_login_time
    </sql>

    <!-- 根据ID查找用户 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM dial_user
        WHERE id = #{id}
    </select>

   

    <!-- 检查用户名是否存在 -->
    <select id="existsByUsername" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM dial_user
        WHERE username = #{username}
    </select>

   

    <!-- 分页查询用户列表，按ID倒序排列 -->
    <select id="findAllByOrderByCreatedTimeDesc" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM dial_user
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{pageNo}
    </select>

    <!-- 根据用户名模糊查询用户列表（分页） -->
    <select id="findByUsernameContainingWithPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM dial_user
        WHERE username LIKE CONCAT('%', #{username}, '%')
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{pageNo}
    </select>

    <!-- 统计用户名模糊查询的总数 -->
    <select id="countByUsernameContaining" resultType="long">
        SELECT COUNT(*)
        FROM dial_user
        WHERE username LIKE CONCAT('%', #{username}, '%')
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.huawei.dialtest.center.entity.DialUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dial_user (
            username,
            password
        ) VALUES (
            #{username},
            #{password}
        )
    </insert>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.huawei.dialtest.center.entity.DialUser">
        UPDATE dial_user
        SET username = #{username},
            password = #{password},
            last_login_time = #{lastLoginTime}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除用户 -->
    <delete id="deleteById">
        DELETE FROM dial_user WHERE id = #{id}
    </delete>

    <!-- 统计用户总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM dial_user
    </select>

</mapper>

